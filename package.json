{
  "name": "political-strategy-workbench",
  "version": "1.0.0",
  "private": true,
  "description": "AI Strategy Intelligence Workbench for political and business news analysis",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepare": "husky install",
    "backend:dev": "cd backend/api-server && npm run start:dev",
    "backend:build": "cd backend/api-server && npm run build",
    "backend:test": "cd backend/api-server && npm run test",
    "db:setup": "cd backend/api-server && npm run db:setup",
    "db:studio": "cd backend/api-server && npm run prisma:studio",
    "db:migrate": "cd backend/api-server && npm run prisma:migrate",
    "docker:up": "docker-compose -f docker-configs/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker-configs/docker-compose.yml down",
    "docker:build": "docker-compose -f docker-configs/docker-compose.yml build",
    "full:install": "npm install && cd backend/api-server && npm install",
    "full:build": "npm run build && npm run backend:build",
    "full:test": "npm run test -- --run && npm run backend:test",
    "ci": "npm run full:install && npm run lint && npm run typecheck && npm run full:test && npm run full:build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.13.2",
    "cheerio": "^1.1.0",
    "next": "^14.2.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rss-parser": "^3.13.0",
    "youtube-caption-extractor": "^1.9.1",
    "youtube-transcript": "^1.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.9.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^2.1.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.18",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
