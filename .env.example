# Application
NODE_ENV=development
APP_NAME=React Web Platform
APP_URL=http://localhost:3000

# API Server
API_PORT=3001
API_URL=http://localhost:3001
API_LOG_LEVEL=debug

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/react_web_platform
DATABASE_CONNECTION_LIMIT=20

# Redis (Caching & Queue)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRY=7d

# OAuth (GitHub)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@vivacitydigital.com

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-test-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# AWS S3 (File Storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=react-web-platform

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=debug

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PAYMENTS=false

# Third-party APIs
OPENAI_API_KEY=your-openai-api-key

# Development only
MOCK_AUTH=false
DEBUG=true
